FROM raspbian/buster
PURGE wolfram-engine
PURGE libreoffice*
CLEAN
AUTOREMOVE
UPDATE true
UPGRADE
APT build-essential cmake unzip pkg-config
APT libjpeg-dev libpng-dev libtiff-dev
APT libavcodec-dev libavformat-dev libswscale-dev libv4l-dev
APT libxvidcore-dev libx264-dev
APT libgtk-3-dev libcanberra-gtk* libatlas-base-dev gfortran python3-dev python3-pip
WORKDIR /home/pi

RUN wget -O opencv.zip https://github.com/opencv/opencv/archive/4.0.0.zip
RUN wget -O opencv_contrib.zip https://github.com/opencv/opencv_contrib/archive/4.0.0.zip
RUN unzip opencv.zip
RUN unzip opencv_contrib.zip
RUN mv opencv-4.0.0 opencv
RUN mv opencv_contrib-4.0.0 opencv_contrib

#RUN wget https://bootstrap.pypa.io/get-pip.py
#RUN sudo python3 get-pip.py
	
PIP3 virtualenv virtualenvwrapper numpy
RUM rm -rf ~/get-pip.py ~/.cache/pip

RUN source ~/.profile
RUN mkvirtualenv cv -p python3
RUN workon cv

RUN cd ~/opencv & mkdir build & cd build
RUN cd ~/opencv/build & cmake -D CMAKE_BUILD_TYPE=RELEASE \
    -D CMAKE_INSTALL_PREFIX=/usr/local \
    -D OPENCV_EXTRA_MODULES_PATH=~/opencv_contrib/modules \
    -D ENABLE_NEON=ON \
    -D ENABLE_VFPV3=ON \
    -D BUILD_TESTS=OFF \
    -D OPENCV_ENABLE_NONFREE=ON \
    -D INSTALL_PYTHON_EXAMPLES=OFF \
    -D BUILD_EXAMPLES=OFF ..

RUNSUDO /etc/init.d/dphys-swapfile stop
RUNSUDO /etc/init.d/dphys-swapfile start

RUN cd ~/opencv/build & make -j4
RUNSUDO cd ~/opencv/build & make install
RUNSUDO ldconfig

RUN cd ~/.virtualenvs/cv/lib/python3.5/site-packages/ & \
    ln -s /usr/local/python/cv2/python-3.5/cv2.cpython-35m-arm-linux-gnueabihf.so cv2.so
